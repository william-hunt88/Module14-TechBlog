<form class="create-post-form">
    <div>
        <label for="post-title-input">Title:</label>
        <input type="text" id="post-title-input">
    </div>
    <div>
        <label for="post-content-textarea">Title:</label>
        <textarea type="text" id="post-content-textarea"></textarea>
    </div>
    <div>
        <button type="submit">Submit</button>
    </div>
</form>
<script src="/javascript/createPost.js"></script>

<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>