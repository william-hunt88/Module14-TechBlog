<ul class="post-list" style="list-style-type:none">
  <div class="post">
    <li>
      <div class="post-top">
        <h2 class = "post-title">{{post.title}}</h2>
      </div>
      <div class="post-info">
        {{post.content}}
      </div>
    </li>

  </div>
</ul>
<form class="ui form comment-form">
  <span>Add a comment:</span>
  <div>
    <textarea name="comment-body" rows="2"></textarea>
  </div>

  <div>
    <button type="submit" class="ui button">add comment</button>
  </div>
</form>
{{> comments post.comments}}

<script src="/javascript/comment.js"></script>