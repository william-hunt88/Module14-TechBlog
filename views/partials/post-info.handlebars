<article class="post">
    <div class="post-top">
        <h2 class="post-title">
            <a href="/post/{{id}}">{{title}}</a>
        </h2>
        <span class="post-info">
            posted by {{user.username}}
            on {{format_date created_at}}
        </span>
    </div>
    <div class="content-div">
        {{content}}
    </div>
    <div class="meta">
        <span>{{comments.length}} comments</span>
    </div>
</article>