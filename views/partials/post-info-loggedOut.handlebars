<article class="post">
    <div class="post-top">
        <span class="post-title">
            <a href="/login">{{title}}</a>
        </span>
        <span class="post-info">
            posted by {{user.username}}
            on {{format_date created_at}}
        </span>
    </div>
    <div class="content-div">
        {{content}}
    </div>
    <div class="meta">
        <span>{{comments.length}} {{comments.length}}</span>

    </div>
</article>